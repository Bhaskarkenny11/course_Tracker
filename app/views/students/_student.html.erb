<div id="<%= dom_id student %>">
  <p>
    <strong>Name:</strong>
    <%= student.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= student.email %>
  </p>

  <p>
    <strong>Major:</strong>
    <%= student.major %>
  </p>

<h2> Selected Courses</h2>
<ol>
<% student.courses.each do |course|%>
<li><%= link_to course.name,course_path(course.id)%></li>
<%end%>
</ol>
</div>
